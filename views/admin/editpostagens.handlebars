{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
 <h2>Editar Postagem</h2>
<div class="card">
       
    <br>
   
    <div class="card-body">
        <form action="/admin/postagem/edit" method="POST">
            <input type="hidden" name="id" value="{{_id}}">
            <label for="titulo" >Titulo</label>
            <input type="text" value ="{{titulo}}" name="titulo" class="form-control">

            <label for="slug">Slug:</label>
            <input type="text" name="slug"  value ="{{slug}}" class="form-control">

            <label for="descricao">Descrição:</label>
            <input type="text" name="descricao"  value="{{descricao}}" class="form-control">

            <label for="conteudo">Conteudo:</label>
            <textarea name="conteudo"  class="form-control">{{conteudo}}</textarea>

            <label for="categoria">Categoria</label>
            <select name="categoria" class=" custom-select">
              {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                 <option value="0">Nenhuma categoria registrada</option>
             {{/each}}
            </select>
            
            <br>
            <button class="btn btn-success mt-4" type="submit">Editar postagem</button>
        </form>
</div>
</div>