<h1>Postagens da categoria {{nome}}</h1>
{{#each postagens}}

    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
          
            <p>{{descricao}}</p>
           <a href="/postagem/{{slug}}"><button class="btn btn-info">Leia mais</button></a>
            <hr>
            <small>{{data}}</small><br>
            <small>Categoria: {{categoria.nome}}</small>
            <br>
        </div>
    </div>

{{else}}
<h5>nenhuma postagem</h5>
{{/each}}